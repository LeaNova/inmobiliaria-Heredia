@model IEnumerable<inmobiliaria_Heredia.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>√çndice de Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.access)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            @if (item.avatar != "") {
                <td>
                    <img width="32" src="@item.avatar" />
                </td>
            } else {
                <td>
                    <img width="32" src="\Uploads/user-image.png" />
                </td>
            }
            <td>
                @Html.DisplayFor(modelItem => item.AccessNombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idUsuario" title="Editar"><i class="fa-solid fa-pen-to-square fa-xl"></i></a> |
                <a asp-action="Details" asp-route-id="@item.idUsuario" title="Detalles"><i class="fa-solid fa-circle-info fa-xl"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.idUsuario" title="Borrar"><i class="fa-solid fa-trash-can fa-xl"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
